{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "gtk4-jsx-runtime/*": ["src/gtk4/*"]
    },
    "jsx": "react-jsx",
    // "jsxImportSource": "gtk4-jsx-runtime"
    "jsxImportSource": "astal/gtk4"
  },
  "include": ["**/*", "src/types.d.ts"]
}
